// vim:ft=conf
{
    "layer": "top",
    "position": "top",
    "height": 20,
    "margin-left": 5,
    "margin-right": 5,
    "margin-top": 5,
    "margin-bottom": 0,
    "spacing": 5,
    "reload_style_on_change": true,

    // Choose the order of the modules

    "modules-left": [
        "custom/empty",
        "custom/arch",
        "custom/separator",
        "clock",
        "custom/separator",
        "hyprland/workspaces"
    ],
    "modules-center": ["hyprland/window"],
    "modules-right": [
        // "cpu",
        // "disk",
        "custom/media",
        "tray",
        "backlight",
        "pulseaudio",
        "network",
        "custom/notification",
        "battery",
        "custom/power",
        "custom/empty"
    ],

    // Modules configuration
    "hyprland/workspaces": {
        "on-click": "activate",
        "all-outputs": true
    },

    "hyprland/window": {
        "format": "{}",
        "max-length": 18,
        "separate-outputs": true
    },

    "hyprland/language": {
        "format": "{} ÔÑú",
        "min-length": 5,
        "format-en": "EN",
        "on-click": "swaymsg 'input * xkb_switch_layout next'",
        "tooltip": true
    },

    "bluetooth": {
        // "controller": "controller1", // specify the alias of the controller if there are more than 1 on the system
        "format": "Ôäî",
        "format-disabled": "",
        "format-off": "",
        "tooltip-format": "{controller_alias}: {controller_address}",
        "tooltip-format-connected": "{controller_alias}: {controller_address}\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}: {device_address}",
        "on-click": "blueman-manager"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 5,
        "show-passive-items": true
    },

    "clock": {
        "interval": 60,
        "format": "{:%d/%m/%Y %a %I:%M %p}", // %b %d %Y  Ôê∫--Date formatting
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },

    "temperature": {
        "critical-threshold": 80,
        "interval": 2,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "cpu": {
        "interval": 2,
        "format": "{usage}% {icon}",
        "format-icons": "Ôíº",
        "tooltip": true
    },

    "memory": {
        "interval": 2,
        "format": "{}% {icon}",
        "format-icons": "ÔáÄ",
        "tooltip": true
    },

    "disk": {
        "interval": 15,
        "format": "{percentage_used}% Û∞ãä"
    },

    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "min": 10,
        "reverse-scrolling": 1
    },

    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "interval": 1,
        "format": "Û∞Ä¶",
        "format-wifi": "Ôá´",
        "format-ethernet": "Ôûñ",
        "format-disconnected": "Û∞Ä¶",
        "format-linked": "Ôûñ",
        "tooltip-format": "Local IP: {ipaddr} ({netmask})\nInterface: {ifname}\nBandwidth: {bandwidthTotalBytes:>3}",
        "tooltip-format-wifi": "{essid} ({frequency}GHz)\nSignal Strength: {signalStrength}% ({signaldBm}dBm)\nLocal IP: {ipaddr} ({netmask})\nInterface: {ifname}\nBandwidth: {bandwidthTotalBytes:>3}",
        "on-click": "~/.config/rofi/scripts/wifi-menu.sh"
    },

    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}", //{format_source}",
        "format-muted": "{volume}% Û∞ñÅ",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "Û∞ãã",
            "hands-free": "Û±°í",
            "headset": "Û∞ãé",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "reverse-scrolling": 1,
        "on-click": "pavucontrol"
    },

    "wireplumber": {
        "format": "{volume}% {icon}",
        "format-muted": "{volume}% Û∞ñÅ",
        // "format-bluetooth": "{volume}% {icon} Û∞ÇØ", //{format_source}",
        // "format-bluetooth-muted": "Û∞ñÅ {icon} Û∞ÇØ", //{format_source}",
        "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ®"],
        "reverse-scrolling": 1,
        "on-click": "helvum"
    },

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },

    "battery": {
        "interval": 3,
        "states": {
            "warning": 30,
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },

    "custom/arch": {
        "format": "{icon}",
        "format-icons": "ÔåÉ",
        "on-click": "rofi -show drun -theme ~/.config/rofi/launcher.rasi",
        "tooltip": false
    },

    "custom/separator": {
        "format": "{icon}",
        "format-icons": "|",
        "tooltip": false
    },

    "custom/pacman": {
        "format": "{} ÔÜá",
        "interval": 3600, // every hour
        "exec": "checkupdates | wc -l", // # of updates
        "exec-if": "exit 0", // always run; consider advanced run conditions
        "on-click": "foot -e 'sudo pacman -Syu'; pkill -SIGRTMIN+8 waybar", // update system
        "signal": 8
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑",
            "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "inhibited-none": "ÔÇ¢",
            "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-inhibited-none": "Ôá∑"
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 15,
        "format-icons": {
            "spotify": "ÔÜº",
            "chromium": "üéú  Ôâ®",
            "chrome": "üéú  Ôâ®",
            "firefox": "üéú  Ôâ©",
            "default": "üéú"
        },
        "hide-empty-text": true,
        "tooltip": true,
        "exec": "python $HOME/.config/waybar/scripts/mediaplayer.py 2> /dev/null",
        "tooltip-format": "{}",
        "on-click": "playerctl play-pause"
    },

    "custom/power": {
        "tooltip": false,
        "format": " ÔÄë ",
        "on-click": "wlogout"
    },

    "custom/empty": {
        "format": " "
    }
}
